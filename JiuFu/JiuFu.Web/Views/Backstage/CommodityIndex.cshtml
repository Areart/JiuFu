@model IEnumerable<JiuFu.Entities.Commodity>

@{
    ViewData["Title"] = "CommodityIndex";
    Layout = "~/Views/Shared/_LayoutView.cshtml";
}

<div class="inbox-head col-lg-12">
    <h3 class="input-text">周边管理</h3>
    <form asp-action="CommodityIndex" class="pull-right position">
        <div class="input-append inner-append">
            <input type="text" class="sr-input" name="SearchString" placeholder="搜索">
            <button class="btn sr-btn append-btn" type="submit"><i class="fa fa-search"></i></button>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                名称
            </th>
            <th>
               价格
            </th>           
            <th>
              状态
            </th>           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>              
                <td>
                    @Html.DisplayFor(modelItem => item.SaleState)
                </td>               
                <td>
                    <a asp-action="CommodityEdit" asp-route-id="@item.Id">修改</a> |
                    <a asp-action="CommodityDetails" asp-route-id="@item.Id">详细</a> |
                    <a asp-action="CommodityDelete" asp-route-id="@item.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
