@model JiuFu.Web.Models.LaundriesOrderViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>详细页</title>
    <link href="~/css/bootstarpcss/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstarpcss/zb.css">
    <link rel="stylesheet" href="~/css/bootstarpcss/Delivery.css">
</head>

<body>
    <div class="container" style="height:100%">
        <div class="row" id="div-header">
            <div class="col-xs-3">
                <a class="btn btn-default" asp-action="Index" role="button">返回</a>
            </div>
            <div class="col-xs-6">
                <p style="text-align:center;font-size:20px;">保洁</p>
            </div>

        </div>
        <div class="row">
            <div id="awsl" class="col-xs-12">
                <a href="#" class="thumbnail">
                    <img src="~/Images/xiyiji4.png" alt="...">
                </a>
            </div>
            <div class="col-xs-12">
                <h4 id="songwu" style="padding-left:40px;">
                    @Model.Price
                </h4>
            </div>
            <select>
                <option value="volvo">干洗</option>
                <option value="saab">水洗</option>
            </select>
            <select>
                <option value="volvo">30min</option>
                <option value="saab">60min</option>
            </select>
            <div class="col-xs-10">
                <h4 style="padding-left:40px;">数量:</h4>
                <div class="col-xs-7" style="padding-left:100px;">
                    <i class="glyphicon glyphicon-minus-sign" onclick="add2()"></i>
                    <label for="" id="Number">1</label>
                    <i class="glyphicon glyphicon-plus-sign" onclick="add()"></i>
                </div>
            </div>
            <div class="col-xs-10">
                <h4 style="padding-left:40px">备注:</h4>
            </div>
            <div class="col-xs-11" style="padding-left:50px">
                <textarea class="form-control" rows="3"
                          name=textarea></textarea>
            </div>
            <div class="col-xs-11" style="margin-top: 10px;">
                <h4 id="awsl1" style="padding-left:40px;float: left;">￥:@Model.Price</h4> <a id="awsl2" style="float: right;" class="btn btn-default" href="#" role="button">结    算</a>
            </div>
        </div>
    </div>
    <!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
    <script src="jquery-1.12.4.js"></script>
    <script src="bootstrap.min.js"></script>
</body>
<script>

    var pn = (document.getElementById('Number').innerHTML) / 1;
    var p = document.getElementById('Number');
    console.log(pn);
    function add() {
        pn = pn + 1;
        p.innerHTML = pn;
    }
    function add2() {
        pn = pn - 1;
        if (pn < 1) {
            pn = 1;
        }
        p.innerHTML = pn;
    }
</script>