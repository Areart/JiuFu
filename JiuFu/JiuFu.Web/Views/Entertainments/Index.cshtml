@model IEnumerable<JiuFu.Entities.Entertainment>

@{
    ViewData["Title"] = "Index";
    Layout = "";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>娱乐</title>
    <link rel="stylesheet" href="~/css/bootstarpcss/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/bootstarpcss/EPage.css">
    <link rel="stylesheet" href="~/css/bootstarpcss/Delivery.css">

</head>
<body>
    <div class="container" style="height:100%">
        <div class="row" id="div-header">
            <div class="col-xs-3">
                <a class="btn btn-default" asp-controller="Home" asp-action="Index">返回</a>
            </div>
            <div class="col-xs-6">
                <p style="text-align:center;font-size:20px;">娱乐</p>
            </div>
        </div>
    </div>
    <div class="row" id="main-rigth">
        @foreach (var item in Model)
        {
            <a asp-action="Details" asp-route-id="@item.Id">
                <div class="col-xs-4">
                    <div class="thumbnail">
                        <img src="@item.picture" alt="...">
                    </div>
                </div>
                <div class="col-xs-2">
                    <h4 id="main-rigth1">@item.Name</h4>
                </div>
            </a>
        }
     </div>
</body>