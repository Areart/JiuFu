@model IEnumerable<FoodViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>点餐</title>
    <link rel="stylesheet" href="~/css/bootstarpcss/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstarpcss/FoodStyle.css" />
</head>

<body>
    <div class="container" style="height:100%">
        <div class="row" id="div-header" style="position:fixed">
            <div class="col-xs-3">
                <a class="btn btn-default" asp-controller="Home" asp-action="Index">返回</a>
            </div>
            <div class="col-xs-8">
                <form asp-controller="Foods" asp-action="Index">
                    <div class="input-group">
                        <input type="text" class="form-control" name="SearchString" placeholder="搜索">
                        <span class="input-group-btn">
                            <input class="btn btn-default" type="submit" value="Go！" />                           
                        </span>
                    </div><!-- /input-group -->
                </form>

            </div>
        </div>
        <div class="row" style="height: 100%;width:100%; position:fixed;margin-top:54px">
            <div class="col-xs-4" style="height: 100%;padding:0;">
                <div class="navbar-example  navbar-default navbar-collapse bs-js-navbar-scrollspy" style="width:100%;padding:0;">
                    <ul id="foodclass" class="nav navbar-nav">
                        <li><a href="#zc">中餐</a></li>
                        <li><a href="#xc">西餐</a></li>
                        <li><a href="#sg">水果</a></li>
                        <li><a href="#yp">饮品</a></li>
                        <li><a href="#td">甜点</a></li>
                    </ul>

                </div>
            </div>
            <div class="col-xs-8" style="overflow-x: hidden;height: 100%;padding-bottom: 600px; " data-spy="scroll"
                 data-target=".navbar-example">
                <div id="zc">

                    @foreach (var item in Model)
                    {

                        if (@item.ClassName == "中餐")
                        {
                            <div class="row" id="main-rigth">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <div class="col-xs-5">
                                        <div class="thumbnail">
                                            <img src="@Html.DisplayFor(modelItem => item.picture)" alt="...">
                                        </div>
                                    </div>
                                    <div class="col-xs-7">
                                        <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                        <h4>￥@Html.DisplayFor(modelItem => item.Price)</h4>
                                    </div>
                                </a>
                            </div>

                        }
                    }
                </div>
                <div id="xc">
                    @foreach (var item in Model)
                    {

                        if (@item.ClassName == "西餐")
                        {
                            <div class="row" id="main-rigth">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <div class="col-xs-5">
                                        <div class="thumbnail">
                                            <img src="@Html.DisplayFor(modelItem => item.picture)" alt="...">
                                        </div>
                                    </div>
                                    <div class="col-xs-7">
                                        <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                        <h4>￥@Html.DisplayFor(modelItem => item.Price)</h4>
                                    </div>
                                </a>
                            </div>

                        }
                    }
                </div>
                <div id="
                     ">
                    @foreach (var item in Model)
                    {

                        if (@item.ClassName == "水果")
                        {
                            <div class="row" id="main-rigth">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <div class="col-xs-5">
                                        <div class="thumbnail">
                                            <img src="@Html.DisplayFor(modelItem => item.picture)" alt="...">
                                        </div>
                                    </div>
                                    <div class="col-xs-7">
                                        <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                        <h4>￥@Html.DisplayFor(modelItem => item.Price)</h4>
                                    </div>
                                </a>
                            </div>

                        }
                    }
                </div>
                <div id="yp">
                    @foreach (var item in Model)
                    {

                        if (@item.ClassName == "饮品")
