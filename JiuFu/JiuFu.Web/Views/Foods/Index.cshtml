                            <div class="row" id="main-rigth">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <div class="col-xs-5">
                                        <div class="thumbnail">
                                            <img src="@Html.DisplayFor(modelItem => item.picture)" alt="...">
                                        </div>
                                    </div>
                                    <div class="col-xs-7">
                                        <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                        <h4>￥@Html.DisplayFor(modelItem => item.Price)</h4>
                                    </div>
                                </a>
                            </div>

                        }
                    }
                </div>
                <div id="td">
                    @foreach (var item in Model)
                    {

                        if (@item.ClassName == "甜点")
                        {
                            <div class="row" id="main-rigth">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <div class="col-xs-5">
                                        <div class="thumbnail">
                                            <img src="@Html.DisplayFor(modelItem => item.picture)" alt="...">
                                        </div>
                                    </div>
                                    <div class="col-xs-7">
                                        <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                        <h4>￥@Html.DisplayFor(modelItem => item.Price)</h4>
                                    </div>
                                </a>
