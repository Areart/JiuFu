@model OrderViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>Bootstrap 101 Template</title>
    <link rel="stylesheet" href="~/css/bootstarpcss/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstarpcss/FoodStyle.css" />
</head>

<body>
    <div class="container" style="height:100%">
        <div class="row" id="div-header">
            <div class="col-xs-3">
                <a class="btn btn-default" asp-action="Index" role="button">返回</a>
            </div>
            <div class="col-xs-6">
                <p style="text-align:center;font-size:20px;">订单管理</p>
            </div>

        </div>
        <div class="row" style="overflow-x:hidden;margin-bottom:41px;height:77%">
            <form asp-action="Edit" method="post">
                <input type="hidden" value="@Model.Id" asp-for="Id" name="Id" />
                <input type="hidden" value="@Model.picture" asp-for="picture" name="picture" />
                <input type="hidden" value="@Model.Name" asp-for="Name" name="Name" />
                <input type="hidden" value="@Model.Price" asp-for="Price" name="Price" id="Price1" />
                <input type="hidden" value="@Model.Number" asp-for="Number" name="Number" id="Number1" />
                <input type="hidden" value="@Model.FoodState" asp-for="FoodState" name="FoodState" id="FoodState1" />

                <div class="col-xs-12">
                    <a href="#" class="thumbnail">
                        <img src=" @Model.picture">
                    </a>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <h4 style="margin-left:55px">
                            <label asp-for="Name">名称： @Model.Name</label>
                            <label asp-for="Id">订单号： @Model.Id</label>
                        </h4>
                    </div>
                    <div class="col-xs-10">
                        <h4 style="padding-left:56px ;" class="col-xs-6">数量: @Model.Number</h4>
                        <h5 style="padding-left:56px ;" class="col-xs-6">
                            订单状态:
                            <label asp-for="FoodState" id="Pic">
                                @Model.FoodState
                            </label>
                        </h5>
                        <div class="col-xs-10">
                            <h4 style="padding-left:40px">备注:</h4>
                        </div>
                        <div class="col-xs-11" style="padding-left:50px">
                            <textarea asp-for="Remarks" readonly  class="form-control" rows="3"></textarea>
                        </div>
                        <div class="col-xs-11" style="margin-top: 10px;">
                            <h4 style="padding-left:40px;float: left;">
                                ￥
                                <label asp-for="Peice" id="Pic">
                                    @Model.Peice
                                </label>
                            </h4>
                            <div class="form-group">
                                <input type="submit" value="取消订单" style="float: right;" class="btn btn-default">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </div>
    <script src="~/css/bootstarpcss/jquery-1.12.4.js"></script>
    <script src="~/css/bootstarpcss/bootstrap.min.js"></script>

</body>